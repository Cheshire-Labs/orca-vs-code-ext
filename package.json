{
  "name": "orca-ide",
  "displayName": "orca-ide",
  "description": "Extension to integrate Orca Lab Automation Scheduler with VS Code IDE",
  "version": "0.0.1",
  "publisher": "cheshire-labs",
  "engines": {
    "vscode": "^1.92.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "yaml.schemas": [
      {
        "fileMatch": "*.orca.yml",
        "url": "./src/yaml_schema/orca_schema.json"
      }
    ],
    "commands": [
      {
        "command": "orca-ide.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "orca.copyExamples",
        "title": "Copy Example Orca YAML files to Workspace",
        "category": "Orca"
      },
      {
        "title": "Load Orca Configuration",
        "category": "Orca",
        "command": "orca-ide.loadYaml",
        "icon": "$(cloud-upload)"
      },
      {
        "title": "Initialize Resources",
        "category": "Orca",
        "command": "orca-ide.initialize"
      },
      {
        "title": "Run Workflow",
        "category": "Orca",
        "command": "orca-ide.runWorkflow",
        "icon": "$(play)"
      },
      {
        "title": "Run Method",
        "category": "Orca",
        "command": "orca-ide.runMethod",
        "icon": "$(play)"
      },
      {
        "title": "Start Server",
        "category": "Orca",
        "command": "orca-ide.startServer"
      },
      {
        "title": "Stop Server",
        "category": "Orca",
        "command": "orca-ide.stopServer"
      },
      {
        "title": "Stop",
        "category": "Orca",
        "command": "orca-ide.stop",
        "icon": "$(primitive-square)"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "orca-ide.loadYaml",
          "group": "navigation",
          "when": "editorLangId == yaml"
        }
      ],
      "view/title": [
        {
          "command": "orca-ide.loadYaml",
          "group": "navigation",
          "when": "view == orca-ide.workflows-view || view == orca-ide.methods-view"
        },
        {
          "command": "orca-ide.stop",
          "group": "navigation",
          "when": "view == orca-ide.workflows-view || view == orca-ide.methods-view"
        }
      ],
      "view/item/context": [
        {
          "command": "orca-ide.runWorkflow",
          "when": "viewItem == workflow",
          "group": "inline"
        },
        {
          "command": "orca-ide.runMethod",
          "when": "viewItem == method",
          "group": "inline"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "orca-activity-bar",
          "title": "Orca",
          "icon": "src/images/orca-vscode-icon.svg"
        }
      ]
    },
    "views": {
      "orca-activity-bar": [
        {
          "id": "orca-ide.workflows-view",
          "name": "Orca Workflows",
          "icon": "src/images/orca-vscode-icon.svg"
        },
        {
          "id": "orca-ide.methods-view",
          "name": "Orca Methods",
          "icon": "src/images/orca-vscode-icon.svg"
        },
        {
          "id": "orca-ide.installed-drivers-view",
          "name": "Installed Drivers",
          "icon": "src/images/orca-vscode-icon.svg"
        },
        {
          "id": "orca-ide.available-drivers-view",
          "name": "Available Drivers",
          "icon": "src/images/orca-vscode-icon.svg"
        }
      ]
    },
    "configuration": {
      "title": "Orca",
      "properties": {}
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/js-yaml": "^4.0.9",
    "@types/mocha": "^10.0.7",
    "@types/node": "20.x",
    "@types/vscode": "^1.92.0",
    "@typescript-eslint/eslint-plugin": "^7.14.1",
    "@typescript-eslint/parser": "^7.11.0",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0",
    "eslint": "^8.57.0",
    "ts-loader": "^9.5.1",
    "typescript": "^5.7.2",
    "webpack": "^5.92.1",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "axios": "^1.7.7",
    "fs-extra": "^11.2.0",
    "js-yaml": "^4.1.0",
    "socket.io-client": "^4.8.1"
  }
}
